<?xml version="1.0" encoding="UTF-8"?>
<model name="up:UploaderTags" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Content model for the uploader-tags plugin</description>
    <author>Maksim Karpychev</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
    </imports>

    <!-- Custom namespace for the Inbyte company -->
    <namespaces>
        <namespace uri="https://github.com/kodermax/uploader-tags/model/1.0" prefix="up"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <aspects>
        <aspect name="up:UploadFolder">
            <title>Upload folder</title>
            <properties>
                <property name="up:allowedTypes">
                    <title>Allowed types</title>
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <multiple>true</multiple>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>